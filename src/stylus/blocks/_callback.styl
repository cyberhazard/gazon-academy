.Callback
  position relative
  padding 2.4rem 3.4rem
  background url('../../images/callback-bg.png') center center/cover no-repeat
  &:before
    content ''
    width 99%
    height 90%
    position absolute
    left 50%
    top 50%
    transform translate(-50%,-50%)
    border 0.1rem dashed white
    z-index 0
  &__title
    font-size 2rem
    color white
    font-weight 700
    text-align center
    text-transform uppercase
    margin-bottom 2rem
  &__form
    position relative
    display flex
    justify-content center
    align-items center
    z-index 2
  &__input
    width 100%
    max-width 16.4rem
    background transparent
    padding 1.6rem 1rem
    border 0.1rem solid white
    border-radius 0.4rem
    font-size 1.4rem
    font-weight 500
    color white
    margin-right 3.2rem
    &::placeholder
      color white
  &__button
    font-size 1.4rem
    font-weight 500
    text-align center
    background white
    padding 1.6rem 3rem
    border-radius 0.4rem
    cursor pointer
    transition 0.3s
    &:hover
      opacity 0.85
