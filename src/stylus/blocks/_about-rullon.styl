.About-rullon
  padding 8rem 0
  &__block
    display flex
    justify-content space-between
    align-items stretch
    margin-bottom 8rem
    &:last-child
      margin-bottom 0
  &__description
    width 48%
    &_reverse
      order 1
  &__wrapper
    width 48%
    &_reverse
      order 0
  &__title
    font-size 2.4rem
    margin-bottom 2rem
  &__subtitle
    font-weight 700
    font-size 1.4rem
    margin-bottom 1.6rem
    text-transform uppercase
  &__text
    font-size 1.4rem
    font-weight 300
    line-height 1.6rem
    margin-bottom 2rem
    &:last-child
      margin-bottom 0
  &__item
    margin-bottom 2rem
  &__button
    display inline-block
    background-color #06B0DC
    border none;
    border-radius: 4px
    padding 1.1rem 1.6rem
    font-size: 1.4rem
    color white
    font-weight: 500
    text-transform: uppercase
    letter-spacing: 1px
    cursor pointer
    transition opacity .3s
    will-change: opacity
    &:hover
      opacity .8
  &__image
    width 100%
    height 100%
    object-fit cover
    max-height 54rem

@media (max-width:667px)
  .About-rullon
    &__block
      flex-wrap wrap
    &__description
      width 100%
      order 2
    &__wrapper
      width 100%
      margin-bottom 1.8rem

