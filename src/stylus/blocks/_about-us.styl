.About-us
  padding 7rem 0 8rem
  &__subtitle
    font-size 1.6rem
    font-style italic
    font-weight 400
  &__title
    font-size 3.8rem
    font-weight 700
    margin-bottom 2.2rem
  &__text
    font-size 1.6rem
    font-weight 400
    font-style italic
    line-height 1.9rem
    margin-bottom 3rem
    &_over
      margin-bottom 0
  &__content
    display flex
    justify-content space-between
  &__left
    width 56%
  &__block
    display flex
    justify-content space-between
    flex-wrap wrap
  &__item
    width 48%
    margin-bottom 4rem
  &__heading
    display flex
    justify-content flex-start
    align-items center
    margin-bottom 1.4rem
  &__line
    width 84%
    background #06B0DC
    height 2px
  &__number
    width 40px
    height 40px
    background-color #06B0DC
    border-radius 50%
    font-size 18px
    color white
    text-align center
    padding 10px 0
    margin-right 1rem
  &__right
    padding-top 4rem
    width 40%
    display flex
    justify-content flex-start
  &__wrap
    position relative
    &:after
      content ''
      width 80%
      height 80%
      position absolute
      left 50%
      top 50%
      transform translate(-50%,-50%)
      border 0.1rem dashed white
  &__img
    width 100%
    object-fit cover
  &__element
    &:nth-child(2)
      padding-top 8rem

@media (max-width: 667px)
  .About-us
    &__content
      display block
    &__item
      width 100%
      &:last-child
        margin-bottom 0
    &__left
      width 100%
    &__right
      width 100%
