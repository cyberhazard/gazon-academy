.Mob-menu
  position fixed
  top 0
  left 100%
  display flex
  flex-direction: column
  width 100%
  height 100vh
  background-color rgba(0,0,0,0.95)
  z-index: 20000
  padding 3rem 1.2rem
  transition: .5s
  will-change: left
  &__top
    display flex
    justify-content: space-between
    align-items: center
    flex-shrink: 0
    flex-grow: 0
  &__close
    & svg
      height 32px
  &__menu
    flex-grow: 1
    padding-top 1rem
    display flex
    flex-direction: column
    align-items: center
    justify-content: space-around
  &__item
    font-family: 'Open Sans'
    font-size: 2rem
    color #fff
    transition 0.3s


.Mobile
  &__line
    display none
    justify-content space-between
    align-items center
    position: fixed;
    padding 2rem
    background: black
    top: 0;
    right: 0;
    width 100%
    z-index: 9;
  &__phone
    display flex
    justify-content flex-start
    align-items center
  &__icon_ph
    width 2rem
    object-fit cover
    margin-right 1rem
  &__link
    color: #eaeaea;
    font-family: Akrobat;
    font-size: 2rem;
    font-weight: 700;
  &__hamburger
    cursor pointer
    display block
  &__text
    font-family: 'Open Sans'
    font-weight: 600
    font-size: 1.4rem
    color #7AC2FB
    margin-right 1rem
  &__icon
    width 3.2rem
    & rect
      fill white
@media (max-width: 667px)
  .Mob-menu
    &__item
      font-size: 1.8rem
  .Mobile
    &__line
      display flex
