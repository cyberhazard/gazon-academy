.Special
  display flex
  flex-wrap wrap
  &__item
    position relative
    width 33.33333%

    max-height 38rem
  &__wrap
    display flex
    justify-content center
    align-items center
    position absolute
    width 100%
    height 100%
    left 0
    top 0
    color white
    background rgba(104,175,8,0.7)
    transition 0.4s
    cursor pointer
    &:hover
      background rgba(6,176,220,0.8)
    & svg
      margin-bottom 2rem
  &__inner
    padding 1rem
    text-align center
  &__image
    width 100%
    height 100%
    object-fit cover
  &__title
    font-size 2.2rem
    font-weight 700
    margin-bottom 1rem
  &__subtitle
    font-size 1.8rem
    line-height 2.1rem

@media (max-width 1000px)
  .Special
    &__wrap
      & svg
        width 6rem
        height 6rem
@media (max-width 667px)
  .Special
    &__item
      width 50%
@media (max-width 450px)
  .Special
    &__wrap
      & svg
        width 3rem
        height 3rem
        margin-bottom 0.4rem
